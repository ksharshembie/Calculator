<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">200dp</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="Gray.Button" parent="Base.Button">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">OnClickOperation</item>
    </style>

    <style name="Orange.Button" parent="Base.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">OnClickOperation</item>
    </style>

    <style name="GrayDark.Button" parent="Base.Button">
        <item name="backgroundTint">@color/gray_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">OnClickNumber</item>
    </style>

    <style name="Big.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name="cornerRadius">200dp</item>
    </style>
    <style name="Red.Big.Button" parent="Big.Button">
        <item name="backgroundTint">@color/red</item>
    </style>,
    <style name="Orange.Big.Button" parent="Big.Button">
        <item name="backgroundTint">@color/orange</item>
    </style>

</resources>